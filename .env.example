# Security Configuration
JWT_SECRET_KEY=your-secure-random-key-here  # REQUIRED: Generate with: openssl rand -hex 32
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://localhost:3000  # Comma-separated list of allowed origins

# API Keys
TAVILY_API_KEY=your-tavily-api-key
GOOGLE_API_KEY=your-google-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key
BRAVE_SEARCH_API_KEY=your-brave-search-api-key

# Database Configuration - Neon PostgreSQL
# Get your connection string from https://console.neon.tech
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require
# Connection pooling recommended for production
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Optional: LLM Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: RAGFlow Configuration
RAGFLOW_API_URL=your-ragflow-url
RAGFLOW_API_KEY=your-ragflow-api-key

# Optional: LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGSMITH_API_KEY=your-langsmith-api-key