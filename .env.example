# Application
ENVIRONMENT=development
APP_NAME=DeerFlow
APP_VERSION=0.1.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8005

# Database
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Auth
JWT_SECRET_KEY=your-secure-random-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://localhost:3000

# Redis (optional)
REDIS_URL=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_DECODE_RESPONSES=true

# Clerk (optional)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=


# LLM Providers (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENROUTER_API_KEY=

# Text-to-Speech (optional)
GOOGLE_TTS_MODEL=gemini-2.5-flash-preview-tts
GOOGLE_TTS_VOICE=kore

# Search APIs (optional)
TAVILY_API_KEY=
BRAVE_SEARCH_API_KEY=
FIRECRAWL_API_KEY=

# RAGFlow (optional)
RAGFLOW_API_URL=
RAGFLOW_API_KEY=
RAGFLOW_PAGE_SIZE=

# VikingDB Knowledge Base (optional)
VIKINGDB_KNOWLEDGE_BASE_API_URL=
VIKINGDB_KNOWLEDGE_BASE_API_AK=
VIKINGDB_KNOWLEDGE_BASE_API_SK=
VIKINGDB_KNOWLEDGE_BASE_RETRIEVAL_SIZE=

# Observability (optional)
LANGCHAIN_TRACING_V2=false
LANGSMITH_API_KEY=

# Development (optional)
NODE_ENV=
