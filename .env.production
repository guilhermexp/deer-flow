# Backend (FastAPI) - Produção

# Ambiente
ENVIRONMENT=production
DEV_AUTH_BYPASS=false
DEBUG=false

# Clerk
# Use sua chave live do Clerk para produção
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_REPLACE_ME
CLERK_SECRET_KEY=sk_live_REPLACE_ME
CLERK_ISSUER=https://YOUR_SUBDOMAIN.clerk.accounts.dev
CLERK_DOMAIN=YOUR_SUBDOMAIN.clerk.accounts.dev

# CORS (domínio do frontend em produção)
# Ex.: https://app.suaempresa.com
ALLOWED_ORIGINS=https://REPLACE_FRONTEND_ORIGIN

# Banco de dados (Neon/Prod)
DATABASE_URL=postgresql://REPLACE_USER:REPLACE_PASSWORD@REPLACE_HOST/REPLACE_DB?sslmode=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# JWT (não usado diretamente quando Clerk habilitado, mantido por compatibilidade)
JWT_SECRET_KEY=REPLACE_STRONG_RANDOM
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (opcional)
REDIS_URL=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_DECODE_RESPONSES=true

# Observabilidade (opcional)
LANGCHAIN_TRACING_V2=false
LANGSMITH_API_KEY=

